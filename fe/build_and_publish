#!/bin/sh

rm -rf .rev \
&& rm -rf .publish_stage \
&& mkdir .publish_stage \
&& gulp build \
&& cd .publish_stage \
&& git init \
&& git checkout -b gh-pages \
&& git remote add origin git@github.com:blakelapierre/solarpicker \
&& git pull origin gh-pages \
&& git rm -r . \
&& cp  -r ../.rev/* . \
&& echo "solarpicker.club" > CNAME \
&& git add . \
&& git commit -m ".rev" \
&& git push origin gh-pages
